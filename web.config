<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Configuraci칩n de tipos MIME para im치genes -->
        <staticContent>
            <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
            <mimeMap fileExtension=".webp" mimeType="image/webp" />
            <mimeMap fileExtension=".woff" mimeType="font/woff" />
            <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
        </staticContent>
        
        <!-- Configuraci칩n de cache -->
        <caching>
            <profiles>
                <add extension=".css" policy="CacheForTimePeriod" duration="00:00:00" />
                <add extension=".js" policy="CacheForTimePeriod" duration="00:00:00" />
                <add extension=".html" policy="CacheForTimePeriod" duration="00:00:00" />
                <add extension=".jpg" policy="CacheForTimePeriod" duration="01:00:00" />
                <add extension=".jpeg" policy="CacheForTimePeriod" duration="01:00:00" />
                <add extension=".png" policy="CacheForTimePeriod" duration="01:00:00" />
                <add extension=".gif" policy="CacheForTimePeriod" duration="01:00:00" />
                <add extension=".svg" policy="CacheForTimePeriod" duration="01:00:00" />
                <add extension=".webp" policy="CacheForTimePeriod" duration="01:00:00" />
            </profiles>
        </caching>
        
        <!-- Compresi칩n -->
        <httpCompression>
            <dynamicTypes>
                <add mimeType="text/*" enabled="true" />
                <add mimeType="message/*" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="text/*" enabled="true" />
                <add mimeType="message/*" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="application/atom+xml" enabled="true" />
                <add mimeType="application/xaml+xml" enabled="true" />
                <add mimeType="image/svg+xml" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </staticTypes>
        </httpCompression>
        
        <!-- Headers de seguridad -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-XSS-Protection" value="1; mode=block" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
</configuration> 